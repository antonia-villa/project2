<div id="zip1">
	<h2> <%= results[0].city%>:<%= results[0].zipcode%></h2>
	<h3> <%= results[0].year%></h3>
	<hr>
	<div>
		<table class="table table-striped">
			<tbody>
				<tr>
					<td>Population:</td>
					<td><%= results[0].population%></td>
				</tr>
				<tr>
					<td> Average Age: </td>
					<td><%= results[0].age %></td>
				</tr>
				<tr>
					<td> Average Income: </td>
					<td> &#36; <%= results[0].income%></td>
				</tr>
				<tr>
					<td> % of Population in Poverty </td>
					<td><%=results[0].percent_poverty%> &#37;</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
