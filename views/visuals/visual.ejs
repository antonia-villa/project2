<h2 class="text-center"> New Contribution </h2>

<form method="post" action ="/contributions">
	<div class="form-group">
		<label for="title">Title:</label>
		<input type="text" name="title" placeholder = "Title of Contribution" class="form-control" required>
	</div>
	<div class="form-group">
		<label for="content">Content:</label>
		<textarea name="content" class="form-control"></textarea>
	</div>
	<div class = "form-group">
	<input type="hidden" name= "tags" value=<%=[zipcode1, year1]%>>
	</div>
	<input type="hidden" name="userId" value="<%=currentUser.dataValues.id%>">
	<input type="submit" value="Create Contribution" class= "btn btn-success">
</form>
