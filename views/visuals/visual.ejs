<div id="mainDataContainer" class="container">
<div class="row">
	<div class = "col-md-5" id="leftContainer">
		<div class="row">
			<div class = "rowHeaderText">
				<h2 class = "cityZipHeader"> <strong><%= results[0].city%></strong> [<%= results[0].zipcode%>]</h2>
				<h3 class = "yearHeader"> Year: <%= results[0].year%></h3>
			</div>
			<div class = "overallStatsTable">
				<table class="table table-sm table-inverse">
					<tbody>
						<tr>
							<td>Population:</td>
							<td><%= results[0].population.toLocaleString('en')%></td>
						</tr>
						<tr>
							<td> Average Age: </td>
							<td><%= results[0].age %></td>
						</tr>
						<tr>
							<td> Average Income: </td>
							<td> &#36; <%= results[0].income%></td>
						</tr>
						<tr>
							<td> % of Population in Poverty </td>
							<td><%=Number(results[0].percent_poverty).toFixed(2)%> &#37;</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="row">
			<div id="data1_viz1">
				<div id="data1_viz1_header">
				</div>
				<div id="data1_viz1_viz">
				</div>
			</div>
			<div id="data1_viz2">
				<div id="data1_viz2_header">
				</div>
				<div id="data1_viz2_viz">
				</div>
			</div>
		</div>
	</div>
	<div class = "col-md-2"></div>
	<div class = "col-md-5" id="rightContainer">
		<div class="row">
			<div class = "rowHeaderText">
				<h2 class = "cityZipHeader"> <strong><%= results[1].city%></strong> [<%= results[1].zipcode%>]</h2>
				<h3 class = "yearHeader"> Year: <%= results[1].year%></h3>
			</div>
			<div class = "overallStatsTable">
				<table class="table table-sm table-inverse">
					<tbody>
						<tr>
							<td>Population:</td>
							<td><%= results[1].population%></td>
						</tr>
						<tr>
							<td> Average Age: </td>
							<td><%= results[1].age %></td>
						</tr>
						<tr>
							<td> Average Income: </td>
							<td> &#36; <%= results[1].income%></td>
						</tr>
						<tr>
							<td> % of Population in Poverty </td>
							<td><%=results[1].percent_poverty%> &#37;</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="row">
			<div id="data2_viz1">
				<div id="data2_viz1_header">
				</div>
				<div id="data2_viz1_viz">
				</div>
			</div>
			<div id="data2_viz2">
				<div id="data2_viz2_header">
				</div>
				<div id="data2_viz2_viz">
				</div>
			</div>
		</div>
	</div>
	</div>
</div>

<hr>

<div class="formContainer">
	<div class="formHeaderContainer">
		<h2 class="text-center formHeader"> New Contribution </h2>
	</div>

	<form method="post" action ="/contributions">
	<div class="form-group">
		<label class = "contFormLabel" for="title">Title:</label>
		<input type="text" name="title" placeholder = "Title of Contribution" class="form-control" required>
	</div>
	<div class="form-group">
		<label class = "contFormLabel" for="content">Content:</label>
		<textarea name="content" class="form-control"></textarea>
	</div>
	<div class = "form-group">
	<input type="hidden" name= "tags" value="<%=results[0].year%>, <%=results[0].city%>,<%=results[0].zipcode%>, <%=results[1].city%>, <%=results[1].zipcode%>">
	</div>

	<input type="submit" value="Create Contribution" id= "contributionBtn" class= "btn btn-success customBtn">
	</form>
</div>
<script>
	var results = <%- JSON.stringify(results) %>;
</script>
