<h2 class="text-center"> New Contribution </h2>

<form method="post" action ="/contributions">
	<!--Identifier user on the backend is name - similarly to how id is used -->
	<div class="form-group">
		<label for="title">Title:</label>
		<input type="text" name="title" placeholder = "Title of Contribution" class="form-control" required>
	</div>
	<div class="form-group">
		<label for="author">Author:</label>
		<select name="userId" class="form-control" id="author" required>
		</select>
	</div>
	<div class="form-group">
		<label for="content">Content:</label>
		<textarea name="content" class="form-control"></textarea>
	</div>
	<div class = "form-group">
		<label> Tags: </label>
		<input type="text" name="tags" placeholder="comma-separated list of tags" class="form-control">
	</div>
	<input type="submit" value="Create Contribution" class= "btn btn-success">
</form>